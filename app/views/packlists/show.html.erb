
    <h1 class="container text-center"><u>Your Packing List</u></h1><br>

      <ul class="list-group row text-capitalize">
        <% @items.each do |item| %>
  	      <li class="list-group-item col-md-4">
    	      <%= item.article %>:
              <span class="badge">
    	          <%= item.quantity %>
              </span>
  	      </li>

	      <% end %>
      </ul>

  <%= link_to 'Edit List', edit_packlist_path(@packlist), class: "btn btn-warning" %>
